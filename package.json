{
  "name": "shaclc-language-server",
  "displayName": "shaclc-language-server",
  "description": "A language server for SHACL Compact Syntax",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:shaclc"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "shaclc",
        "aliases": [
          "SHACL Compact Syntax",
          "shaclc"
        ],
        "extensions": [
          ".shaclc",
          ".shc",
          ".shaclce",
          ".shce"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./shacl.svg",
          "light": "./shacl.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "shaclc",
        "scopeName": "source.shaclc",
        "path": "./syntaxes/shaclc.tmLanguage.json"
      }
    ]
  },
  "dependencies": {
    "n3": "^1.16.3",
    "shaclc-parse": "^1.2.1",
    "shaclc-write": "^1.4.0"
  },
  "devDependencies": {
    "@rdfjs/types": "^1.1.0",
    "@types/n3": "^1.10.4",
    "@types/node": "^18.11.18",
    "typescript": "^4.9.4",
    "vscode": "^1.1.37"
  },
  "scripts": {
    "build": "tsc"
  }
}
